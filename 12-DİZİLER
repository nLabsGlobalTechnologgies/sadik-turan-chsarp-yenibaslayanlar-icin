            int st1, st2, st3, st4, st5, st6, st7, st8, st9, st10;
            st1 = 1;
            st2 = 2;
            st3 = 3;
            st4 = 4;
            st5 = 5;
            st6 = 6;
            st7 = 7;
            st8 = 8;
            st9 = 9;
            st10 = 10;
