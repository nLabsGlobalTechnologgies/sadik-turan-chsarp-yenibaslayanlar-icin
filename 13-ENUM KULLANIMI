using System;

namespace _1_SadikTuran_temelCEgitimi
{
    internal partial class Program
    {
        enum MyEnum
        {
            Adana=01,
            Mersin=02
        }

        static void Main(string[] args)
        {
            var adanaEnum = MyEnum.Adana;
            var mersinEnum = MyEnum.Mersin;

            var adanaId = (int)adanaEnum;
            if (adanaEnum < mersinEnum)
            {
                Console.WriteLine(adanaId + " Nolu Şehirdesiniz");
                Console.WriteLine(adanaEnum.ToString());
            }
            else
            {
                Console.WriteLine("else işlemi degil yani");
            }


            Console.ReadLine();
        }        
    }
}
